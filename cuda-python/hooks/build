#!/bin/bash

CUDA=${DOCKER_TAG%-*}
CUDA_VERSION=${CUDA%cuda}

PYTHON=${DOCKER_TAG##*-}
PYTHON_VERSION=${PYTHON%py}

if [ $DOCKER_TAG == "latest" ]
then
  docker build -t $IMAGE_NAME .
else
  docker build --build-arg CUDA_VERSION="${CUDA_VERSION}" PYTHON_VERSION="${PYTHON_VERSION}" -t $IMAGE_NAME .
fi